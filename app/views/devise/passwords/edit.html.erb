<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <div class="mx-auto h-12 w-12 flex items-center justify-center rounded-full bg-indigo-100">
        <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
        </svg>
      </div>
      <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
        <%= t('.title') %>
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        <%= t('.subtitle') %>
      </p>
    </div>
    
    <div class="bg-white py-8 px-6 shadow-sm rounded-xl border border-gray-200">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div>
          <%= f.label :password, t('activerecord.attributes.user.password'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-1"><%= t('.password_hint', count: @minimum_password_length) %></p>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.submit t('.submit'), class: "w-full bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
