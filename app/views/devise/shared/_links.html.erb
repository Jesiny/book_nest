<div class="mt-6 space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('.login'), new_session_path(resource_name), class: "block text-center text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('.signup'), new_registration_path(resource_name), class: "block text-center text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('.forgot_password'), new_password_path(resource_name), class: "block text-center text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('.no_confirmation'), new_confirmation_path(resource_name), class: "block text-center text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('.no_unlock'), new_unlock_path(resource_name), class: "block text-center text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="mt-4">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Or continue with</span>
        </div>
      </div>
      <div class="mt-4 space-y-2">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to t('shared.links.omniauth', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
