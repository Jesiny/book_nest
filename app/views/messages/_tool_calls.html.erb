<div class="mt-3 space-y-2 pt-3 border-t <%= message.role == 'user' ? 'border-indigo-400/30' : 'border-gray-200' %>">
  <% message.tool_calls.each do |tool_call| %>
    <div class="bg-white/50 border <%= message.role == 'user' ? 'border-indigo-200/50' : 'border-gray-200' %> rounded-lg p-3">
      <div class="flex items-center gap-2 mb-2">
        <svg class="w-4 h-4 <%= message.role == 'user' ? 'text-indigo-300' : 'text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span class="text-xs font-medium <%= message.role == 'user' ? 'text-indigo-200' : 'text-gray-600' %>"><%= t('.title') %></span>
      </div>
      <div class="font-mono text-xs <%= message.role == 'user' ? 'text-indigo-100' : 'text-gray-700' %>">
        <span class="font-semibold <%= message.role == 'user' ? 'text-indigo-200' : 'text-indigo-600' %>"><%= tool_call.name %></span>
        <span class="<%= message.role == 'user' ? 'text-indigo-100/80' : 'text-gray-600' %>">(<%= tool_call.arguments.map { |k, v| "#{k}: #{v.inspect}" }.join(", ") %>)</span>
      </div>
    </div>
  <% end %>
</div>
