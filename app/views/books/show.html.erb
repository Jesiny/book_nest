<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div>
      <div class="aspect-[3/4] w-full bg-gray-100 rounded overflow-hidden">
        <% if @book.cover.attached? %>
          <%= image_tag @book.cover.variant(resize_to_fill: [600, 800]).processed, alt: @book.title, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full flex items-center justify-center text-gray-400 text-sm"><%= t('.no_cover') %></div>
        <% end %>
      </div>
    </div>
    <div class="md:col-span-2">
      <div class="flex items-start justify-between">
        <h1 class="text-2xl font-semibold"><%= @book.title %></h1>
        <div class="flex items-center gap-3">
          <%= link_to t("common.edit"), edit_group_book_path(@group, @book), class: "text-gray-600 hover:text-gray-900" %>
          <%= link_to t("common.delete"), group_book_path(@group, @book), data: { turbo_method: :delete, turbo_confirm: t('.confirm_delete') }, class: "text-red-600 hover:text-red-800" %>
        </div>
      </div>

      <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="text-sm text-gray-600"><%= t('.status') %></div>
          <div class="mt-1">
            <select data-controller="status" data-status-url-value="<%= group_book_path(@group, @book) %>" data-action="change->status#change" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
              <% Book.statuses.keys.each do |status| %>
                <option value="<%= status %>" <%= 'selected' if @book.status == status %>><%= t("activerecord.attributes.book.status.#{status}") %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-600"><%= t('.rating') %></div>
          <div class="mt-1 flex items-center gap-2">
            <div class="flex items-center">
              <% (0..5).step(0.5) do |value| %>
                <label class="cursor-pointer">
                  <input type="radio" name="rating" value="<%= value %>" <%= 'checked' if @book.rating == value %> class="sr-only" data-controller="rating" data-rating-url-value="<%= group_book_path(@group, @book) %>" data-action="change->rating#save" />
                  <span class="text-2xl <%= @book.rating && @book.rating >= value ? 'text-yellow-400' : 'text-gray-300' %>">â˜…</span>
                </label>
              <% end %>
            </div>
            <span class="text-sm text-gray-600"><%= @book.rating %>/5</span>
          </div>
        </div>
        <div>
          <div class="text-sm text-gray-600"><%= t('.date_started') %></div>
          <div class="mt-1 text-base"><%= @book.date_started ? l(@book.date_started) : '-' %></div>
        </div>
        <div>
          <div class="text-sm text-gray-600"><%= t('.date_finished') %></div>
          <div class="mt-1 text-base"><%= @book.date_finished ? l(@book.date_finished) : '-' %></div>
        </div>
      </div>

      <div class="mt-6">
        <div class="text-sm text-gray-600"><%= t('.resume') %></div>
        <p class="mt-1 text-gray-800 whitespace-pre-line"><%= @book.resume.presence || t('.no_resume') %></p>
      </div>

      <div class="mt-6">
        <div class="text-sm text-gray-600"><%= t('.review') %></div>
        <p class="mt-1 text-gray-800 whitespace-pre-line"><%= @book.review.presence || t('.no_review') %></p>
        <div class="mt-4 flex items-center gap-3">
          <form data-controller="review-assist" data-review-assist-url-value="<%= assist_review_group_book_path(@group, @book) %>">
            <button class="inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" data-action="click->review-assist#fetchSuggestion" type="button"><%= t('.help_write_review') %></button>
            <textarea data-review-assist-target="textarea" class="sr-only"></textarea>
          </form>
          <form data-controller="chat" data-chat-url-value="<%= chat_group_book_path(@group, @book) %>">
            <div class="flex items-center gap-2">
              <input data-chat-target="input" type="text" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="<%= t('.chat_placeholder') %>">
              <button class="inline-flex items-center rounded-md bg-gray-900 px-4 py-2 text-white hover:bg-gray-800" data-action="click->chat#send" type="button"><%= t('.talk_with_ai') %></button>
            </div>
            <ul data-chat-target="list" class="mt-3 space-y-1 text-sm text-gray-800"></ul>
          </form>
        </div>
      </div>

      <div class="mt-8">
        <%= link_to t("common.back"), group_path(@group), class: "text-gray-600 hover:text-gray-900" %>
      </div>
    </div>
  </div>
</div>


