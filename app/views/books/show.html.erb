<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to group_path(@group), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t("common.back") %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 p-8">
      <!-- Cover Image -->
      <div>
        <div class="aspect-[3/4] w-full bg-gray-100 rounded-lg overflow-hidden shadow-sm">
          <% if @book.cover.attached? %>
            <%= image_tag @book.cover,
                alt: @book.title,
                loading: "lazy",
                class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center text-gray-400">
              <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Book Details -->
      <div class="md:col-span-2">
        <!-- Header with Title, Author, and Actions -->
        <div class="flex items-start justify-between mb-6">
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @book.title %></h1>
            <p class="text-lg text-gray-600"><%= @book.author %></p>
          </div>
          <div class="flex items-center gap-2 ml-4">
            <%= link_to edit_group_book_path(@group, @book), class: "px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors", title: t("common.edit") do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
            <%= link_to group_book_path(@group, @book), data: { turbo_method: :delete, turbo_confirm: t('.confirm_delete') }, class: "px-3 py-2 border border-gray-300 rounded-lg hover:bg-red-50 transition-colors", title: t("common.delete") do %>
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Status and Rating -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-2"><%= t('activerecord.attributes.book.status') %></label>
            <% 
              status_classes = {
                'tbr' => 'bg-gray-100 text-gray-700',
                'reading' => 'bg-blue-100 text-blue-800',
                'finished' => 'bg-green-100 text-green-800',
                'dnf' => 'bg-red-100 text-red-800'
              }
              status_class = status_classes[@book.status] || 'bg-gray-100 text-gray-700'
            %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= status_class %>">
              <%= t("activerecord.attributes.book.status_#{@book.status}") %>
            </span>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-2"><%= t('activerecord.attributes.book.rating') %></label>
            <div class="flex items-center gap-2">
              <div data-controller="rating" data-rating-readonly-value="true" data-rating="<%= @book.rating || 0 %>">
                <div class="flex items-center">
                  <% 5.times do |index| %>
                    <div data-rating-target="star">
                      <svg class="w-6 h-6 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <defs>
                          <linearGradient id="half-star-gradient-<%= index %>" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="50%" style="stop-color:currentColor;stop-opacity:1" />
                            <stop offset="50%" style="stop-color:transparent;stop-opacity:1" />
                          </linearGradient>
                        </defs>
                        <path stroke="currentColor" stroke-width="2" d="M11.083 5.104c.35-.8 1.485-.8 1.834 0l1.752 4.022a1 1 0 0 0 .84.597l4.463.342c.9.069 1.255 1.2.556 1.771l-3.33 2.723a1 1 0 0 0-.337 1.016l1.03 4.119c.214.858-.71 1.552-1.474 1.106l-3.913-2.281a1 1 0 0 0-1.008 0L7.583 20.8c-.764.446-1.688-.248-1.474-1.106l1.03-4.119A1 1 0 0 0 6.8 14.56l-3.33-2.723c-.698-.571-.342-1.702.557-1.771l4.462-.342a1 1 0 0 0 .84-.597l1.753-4.022Z"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
              </div>
              <span class="text-sm font-medium text-gray-700"><%= @book.rating.to_f % 1 == 0 ? @book.rating.to_i : @book.rating %>/5</span>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-2"><%= t('activerecord.attributes.book.date_started') %></label>
            <p class="text-base text-gray-900"><%= @book.date_started ? l(@book.date_started) : '-' %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-2"><%= t('activerecord.attributes.book.date_finished') %></label>
            <p class="text-base text-gray-900"><%= @book.date_finished ? l(@book.date_finished) : '-' %></p>
          </div>
        </div>

        <!-- Resume -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-600 mb-2"><%= t('activerecord.attributes.book.resume') %></label>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <p class="text-gray-800 whitespace-pre-line"><%= @book.resume.presence || t('.no_resume') %></p>
          </div>
        </div>

        <!-- Review -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-600 mb-2"><%= t('activerecord.attributes.book.review') %></label>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <p class="text-gray-800 whitespace-pre-line"><%= @book.review.presence || t('.no_review') %></p>
          </div>
        </div>

        <!-- AI Chat Button -->
        <div class="flex items-center gap-3">
          <%= link_to group_book_chat_path(@group, @book), class: "inline-flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <%= t('.talk_with_ai') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


