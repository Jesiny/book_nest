<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to group_path(@group), class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t("common.back") %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= t('.title') %></h1>
    <%= render 'form', group: @group, book: @book %>
  </div>
</div>


