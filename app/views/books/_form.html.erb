<%= form_with(model: [group, book], class: "space-y-6") do |form| %>
  <% if book.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="text-sm text-red-700">
        <ul class="list-disc list-inside">
          <% book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :author, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :author, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :resume, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :resume, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :status, 
        Book.statuses.keys.map { |status| [t("activerecord.attributes.book.status_#{status}"), status] },
        {},
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :rating, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 flex items-center gap-2">
        <div data-controller="rating" data-rating-url-value="<%= group_book_path(group, book) if book.persisted? %>">
          <%= form.hidden_field :rating, data: { rating_target: "input" } %>
          <div class="flex items-center">
            <% 5.times do |index| %>
              <div class="cursor-pointer" data-rating-target="star" data-action="click->rating#handleStarClick">
                <svg class="w-6 h-6 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <defs>
                    <linearGradient id="half-star-gradient-<%= index %>" x1="0%" y1="0%" x2="100%" y2="0%">
                      <stop offset="50%" style="stop-color:currentColor;stop-opacity:1" />
                      <stop offset="50%" style="stop-color:transparent;stop-opacity:1" />
                    </linearGradient>
                  </defs>
                  <path stroke="currentColor" stroke-width="2" d="M11.083 5.104c.35-.8 1.485-.8 1.834 0l1.752 4.022a1 1 0 0 0 .84.597l4.463.342c.9.069 1.255 1.2.556 1.771l-3.33 2.723a1 1 0 0 0-.337 1.016l1.03 4.119c.214.858-.71 1.552-1.474 1.106l-3.913-2.281a1 1 0 0 0-1.008 0L7.583 20.8c-.764.446-1.688-.248-1.474-1.106l1.03-4.119A1 1 0 0 0 6.8 14.56l-3.33-2.723c-.698-.571-.342-1.702.557-1.771l4.462-.342a1 1 0 0 0 .84-.597l1.753-4.022Z"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :date_started, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :date_started, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :date_finished, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :date_finished, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div>
    <%= form.label :review, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :review, rows: 6, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :cover, class: "block mb-2 text-sm font-medium text-gray-900" %>

    <%= tag.div class: "flex items-center w-full", data: { controller: "image-preview", image_preview_thumb_classes_value: %w[w-36 h-36] } do %>
      <%= form.label :cover, class: "flex flex-col", data: { image_preview_target: "label" } do %>
        <% if @book.cover.attached? %>
          <%= image_tag @book.cover,
                        alt: @book.title,
                        class: "w-36 h-36 rounded-lg object-cover" %>
        <% else %>
          <div class="border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100">
            <p class="p-6 font-semibold text-sm"><%= t '.cover_label' %></p>
          </div>
        <% end %>
      <% end %>
      <%= form.file_field :cover, class: "hidden", accept: ".png, .jpg, .jpeg", data: { image_preview_target: "file_field", action: "change->image-preview#preview" }%>
    <% end %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit t("common.save"), class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
    <%= link_to t("common.cancel"), group_path(group), class: "text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>


