<%= form_with(model: [group, book], class: "space-y-6") do |form| %>
  <% if book.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 p-4">
      <div class="text-sm text-red-700">
        <ul class="list-disc list-inside space-y-1">
          <% book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :author, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :author, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
  </div>

  <div>
    <%= form.label :resume, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :resume, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, 
        Book.statuses.keys.map { |status| [t("activerecord.attributes.book.status_#{status}"), status] },
        {},
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :rating, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="flex items-center gap-2">
        <div data-controller="rating" data-rating-url-value="<%= group_book_path(group, book) if book.persisted? %>">
          <%= form.hidden_field :rating, data: { rating_target: "input" } %>
          <div class="flex items-center">
            <% 5.times do |index| %>
              <div class="cursor-pointer" data-rating-target="star" data-action="click->rating#handleStarClick">
                <svg class="w-6 h-6 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <defs>
                    <linearGradient id="half-star-gradient-<%= index %>" x1="0%" y1="0%" x2="100%" y2="0%">
                      <stop offset="50%" style="stop-color:currentColor;stop-opacity:1" />
                      <stop offset="50%" style="stop-color:transparent;stop-opacity:1" />
                    </linearGradient>
                  </defs>
                  <path stroke="currentColor" stroke-width="2" d="M11.083 5.104c.35-.8 1.485-.8 1.834 0l1.752 4.022a1 1 0 0 0 .84.597l4.463.342c.9.069 1.255 1.2.556 1.771l-3.33 2.723a1 1 0 0 0-.337 1.016l1.03 4.119c.214.858-.71 1.552-1.474 1.106l-3.913-2.281a1 1 0 0 0-1.008 0L7.583 20.8c-.764.446-1.688-.248-1.474-1.106l1.03-4.119A1 1 0 0 0 6.8 14.56l-3.33-2.723c-.698-.571-.342-1.702.557-1.771l4.462-.342a1 1 0 0 0 .84-.597l1.753-4.022Z"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :date_started, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.date_field :date_started, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>
    <div>
      <%= form.label :date_finished, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.date_field :date_finished, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>
  </div>

  <div>
    <%= form.label :review, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :review, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none" %>
  </div>

  <div>
    <%= form.label :cover, class: "block text-sm font-medium text-gray-700 mb-2" %>

    <%= tag.div class: "flex items-center w-full", data: { controller: "image-preview", image_preview_thumb_classes_value: %w[w-36 h-36] } do %>
      <%= form.label :cover, class: "flex flex-col", data: { image_preview_target: "label" } do %>
        <% if book.cover.attached? %>
          <%= image_tag book.cover,
                        alt: book.title,
                        class: "w-36 h-36 rounded-lg object-cover border border-gray-200" %>
        <% else %>
          <div class="border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors">
            <div class="p-6 flex flex-col items-center justify-center">
              <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="font-semibold text-sm text-gray-600"><%= t '.cover_label' %></p>
            </div>
          </div>
        <% end %>
      <% end %>
      <%= form.file_field :cover, class: "hidden", accept: ".png, .jpg, .jpeg", data: { image_preview_target: "file_field", action: "change->image-preview#preview" }%>
    <% end %>
  </div>

  <div class="flex space-x-3 pt-4">
    <%= link_to (book.persisted? ? group_book_path(group, book) : group_path(group)), 
        class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg font-medium text-center hover:bg-gray-50 transition-colors" do %>
      <%= t("common.cancel") %>
    <% end %>
    <%= form.submit t("common.save"), 
        class: "flex-1 bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" %>
  </div>
<% end %>


