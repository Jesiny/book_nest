<%= form_with(model: group, class: "space-y-6") do |form| %>
  <% if group.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="text-sm text-red-700">
        <ul class="list-disc list-inside">
          <% group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.submit t("common.save"), class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
    <%= link_to t("common.cancel"), (group.persisted? ? group_path(group) : groups_path), class: "text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>


