<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
  <!-- Group Header -->
  <header class="mb-8">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @group.name %></h1>
        <% if @group.description.present? %>
          <p class="text-gray-600 mb-4"><%= @group.description %></p>
        <% end %>
        <div class="flex items-center space-x-4 text-sm text-gray-500">
          <span><%= t '.count_books', count: @books.count %></span>
          <% 
            stats = {
              tbr: @books.where(status: 'tbr').count,
              reading: @books.where(status: 'reading').count,
              finished: @books.where(status: 'finished').count,
              dnf: @books.where(status: 'dnf').count
            }
          %>
          <% if stats.values.any?(&:positive?) %>
            <span>
              <%= [
                    (stats[:reading].positive? ? t('.stats.reading', count: stats[:reading]) : nil),
                    (stats[:finished].positive? ? t('.stats.finished', count: stats[:finished]) : nil),
                    (stats[:tbr].positive? ? t('.stats.tbr', count: stats[:tbr]) : nil),
                    (stats[:dnf].positive? ? t('.stats.dnf', count: stats[:dnf]) : nil)
                  ].compact.join(', ') %>
            </span>
          <% end %>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <%= link_to edit_group_path(@group), class: "px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <%= t("common.edit") %>
        <% end %>
      </div>
    </div>
  </header>

  <!-- Controls -->
  <% if @books.any? %>
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
      <div class="flex items-center space-x-4">
        <%= link_to new_group_book_path(@group), class: "inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <%= t('.add_book') %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Books Grid -->
  <% if @books.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @books.each do |book| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
          <%= link_to [@group, book], class: "block" do %>
            <div class="aspect-[3/4] w-full bg-gray-100 overflow-hidden">
              <% if book.cover.attached? %>
                <%= image_tag book.cover, alt: book.title, loading: "lazy", class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-gray-400 text-sm">
                  <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-base font-medium text-gray-900 truncate flex-1"><%= book.title %></h3>
                <% 
                  status_classes = {
                    'tbr' => 'bg-gray-100 text-gray-700',
                    'reading' => 'bg-blue-100 text-blue-800',
                    'finished' => 'bg-green-100 text-green-800',
                    'dnf' => 'bg-red-100 text-red-800'
                  }
                  status_class = status_classes[book.status] || 'bg-gray-100 text-gray-700'
                %>
                <span class="ml-2 text-xs px-2 py-1 rounded-full font-medium <%= status_class %>">
                  <%= Book.human_attribute_name("status_#{book.status}") %>
                </span>
              </div>
              <div class="text-sm text-gray-600">
                <%= t('.rating') %> <%= book.rating.to_f % 1 == 0 ? book.rating.to_i : book.rating %>/5
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('.empty_heading') %></h3>
      <p class="text-gray-600 mb-4"><%= t('.empty') %></p>
      <%= link_to new_group_book_path(@group), class: "inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t('.add_first') %>
      <% end %>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to groups_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <%= t("common.back") %>
    <% end %>
  </div>
</div>


