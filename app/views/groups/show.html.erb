<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex items-start justify-between mb-6">
    <div>
      <h1 class="text-2xl font-semibold"><%= @group.name %></h1>
      <% if @group.description.present? %>
        <p class="mt-1 text-gray-600"><%= @group.description %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to t('.add_book'), new_group_book_path(@group), class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
      <%= link_to t("common.edit"), edit_group_path(@group), class: "text-gray-600 hover:text-gray-900" %>
      <%= link_to t("common.delete"), group_path(@group), data: { turbo_method: :delete, turbo_confirm: t('.confirm_delete') }, class: "text-red-600 hover:text-red-800" %>
    </div>
  </div>

  <% if @books.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @books.each do |book| %>
        <div class="rounded-lg border border-gray-200 p-4 bg-white shadow-sm">
          <%= link_to [@group, book], class: "block" do %>
            <div class="aspect-[3/4] w-full bg-gray-100 rounded overflow-hidden">
              <% if book.cover.attached? %>
                <%= image_tag book.cover, alt: book.title, loading: "lazy",class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-gray-400 text-sm"><%= t('.no_cover') %></div>
              <% end %>
            </div>
            <div class="mt-3">
              <div class="flex items-center justify-between">
                <h3 class="text-base font-medium text-gray-900 truncate"><%= book.title %></h3>
                <span class="ml-2 text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-700"><%= Book.human_attribute_name("status_#{book.status}") %></span>
              </div>
              <div class="mt-2 text-sm text-gray-600">
                <%= t('.rating') %> <%= book.rating %>/5
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 border border-dashed rounded-lg">
      <p class="text-gray-600"><%= t('.empty') %></p>
      <div class="mt-4">
        <%= link_to t('.add_first'), new_group_book_path(@group), class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>

  <div class="mt-8">
    <%= link_to t("common.back"), groups_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>


