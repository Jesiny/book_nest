<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
  <header class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
      <p class="text-gray-600 mt-2"><%= t('.subtitle') %></p>
    </div>
    <% unless @groups.none? %>
      <%= link_to new_group_path, class: "inline-flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t('.new_group') %>
      <% end %>
    <% end %>
  </header>

  <% if @groups.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @groups.each do |group| %>
        <% 
          books = group.books
          stats = {
            reading: books.where(status: 'reading').count,
            finished: books.where(status: 'finished').count,
            tbr: books.where(status: 'tbr').count
          }
        %>
        <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
          <%= link_to group_path(group), class: "block" do %>
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= group.name %></h2>
                <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= group.description %></p>
              </div>
            </div>
            
            <div class="flex items-center justify-between mb-4">
              <span class="text-sm text-gray-500"><%= t '.count_books', count: books.count %></span>
              <div class="flex space-x-2">
                <% if stats[:reading] > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= stats[:reading] %> <%= Book.human_attribute_name('status_reading') %>
                  </span>
                <% end %>
                <% if stats[:finished] > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= stats[:finished] %> <%= Book.human_attribute_name('status_finished') %>
                  </span>
                <% end %>
                <% if stats[:tbr] > 0 %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                    <%= stats[:tbr] %> <%= Book.human_attribute_name('status_tbr') %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="flex items-center justify-end gap-3 mt-4">
            <%= link_to edit_group_path(group), class: "px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors", title: t("common.edit") do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
            <%= link_to group_path(group), data: { turbo_method: :delete, turbo_confirm: t('.confirm_delete') }, class: "px-3 py-2 border border-gray-300 rounded-lg hover:bg-red-50 transition-colors", title: t("common.delete") do %>
              <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('.empty_heading') %></h3>
      <p class="text-gray-600 mb-4"><%= t('.empty') %></p>
      <%= link_to new_group_path, class: "inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium transition-all hover:bg-indigo-700 hover:shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t('.create_first') %>
      <% end %>
    </div>
  <% end %>
</div>


